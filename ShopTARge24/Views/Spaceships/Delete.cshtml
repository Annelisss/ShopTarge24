@model ShopTARge24.Core.Dto.SpaceshipDto

<h1>Delete spaceship</h1>
<p class="text-danger">Kas oled kindel, et tahad selle kustutada?</p>
<hr />

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Classification</dd>

    <dt class="col-sm-2">Built date</dt>
    <dd class="col-sm-10">@Model.BuiltDate</dd>

    <dt class="col-sm-2">Crew</dt>
    <dd class="col-sm-10">@Model.Crew</dd>

    <dt class="col-sm-2">Engine power</dt>
    <dd class="col-sm-10">@Model.EnginePower</dd>
</dl>

@if (Model.FileToApiDtos != null && Model.FileToApiDtos.Any())
{
    <h4>Files / images</h4>
    <div class="row mb-3">
        @foreach (var file in Model.FileToApiDtos)
        {
            <div class="col-sm-3 mb-2">
                <partial name="_Images"
                         model="new ShopTARge24.Models.Spaceships.ImageViewModel { Filepath = file.FileName }" />
            </div>
        }
    </div>
}

<form asp-action="Delete" asp-controller="Spaceships" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Spaceships" class="btn btn-secondary">Back</a>
</form>
