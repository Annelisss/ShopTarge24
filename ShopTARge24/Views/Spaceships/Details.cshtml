@model ShopTARge24.Core.Dto.SpaceshipDto

<h1>Spaceship details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Classification</dt>
    <dd class="col-sm-10">@Model.Classification</dd>

    <dt class="col-sm-2">Built date</dt>
    <dd class="col-sm-10">@Model.BuiltDate?.ToString("dd.MM.yyyy HH:mm")</dd>

    <dt class="col-sm-2">Crew</dt>
    <dd class="col-sm-10">@Model.Crew</dd>

    <dt class="col-sm-2">Engine power</dt>
    <dd class="col-sm-10">@Model.EnginePower</dd>

    <dt class="col-sm-2">Created</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>

    <dt class="col-sm-2">Modified</dt>
    <dd class="col-sm-10">@Model.ModifiedAt</dd>
</dl>

@if (Model.FileToApiDtos != null && Model.FileToApiDtos.Any())
{
    <h4>Files / images</h4>
    <div class="row">
        @foreach (var file in Model.FileToApiDtos)
        {
            var fileName = !string.IsNullOrEmpty(file.ExistingFilePath)
            ? file.ExistingFilePath
            : file.FileName;

            var src = Url.Content($"~/multipleFileUpload/{fileName}");

            <div class="col-sm-3 mb-2">
                <img src="@src" class="img-fluid img-thumbnail" />
            </div>
        }
    </div>
}

<a asp-action="Index" asp-controller="Spaceships" class="btn btn-secondary mt-3">Back</a>
