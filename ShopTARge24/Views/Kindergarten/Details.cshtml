@model ShopTARge24.Core.Domain.Kindergartens
@using ShopTARge24.Core.Domain

@{
    ViewData["Title"] = "Kindergarten details";

    var files = ViewBag.Files as List<FileToApi>;
}

<h1>Kindergarten details</h1>

<dl class="row">
    <dt class="col-sm-2">Group</dt>
    <dd class="col-sm-10">@Model.GroupName</dd>

    <dt class="col-sm-2">Children</dt>
    <dd class="col-sm-10">@Model.ChildrenCount</dd>

    <dt class="col-sm-2">Kindergarten</dt>
    <dd class="col-sm-10">@Model.KindergartenName</dd>

    <dt class="col-sm-2">Teacher</dt>
    <dd class="col-sm-10">@Model.TeacherName</dd>

    <dt class="col-sm-2">Photo</dt>
    <dd class="col-sm-10">
        @if (files != null && files.Count > 0)
        {
            <div class="d-flex gap-3 flex-wrap">
                @foreach (var f in files)
                {
                    <img src="~/multipleFileUpload/@f.ExistingFilePath"
                         alt="photo"
                         style="max-width:150px;" class="img-thumbnail" />
                }
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <img src="~/uploads/@Model.ImageName"
                 alt="photo"
                 style="max-width:150px;" class="img-thumbnail" />
        }
        else
        {
            <span>Pilti pole lisatud.</span>
        }
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
