@model ShopTARge24.Models.Cocktail.SearchCocktailViewModel

<h1>Search Cocktail</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Find your favorite cocktail</h2>
                <label asp-for="SearchCocktail" style="font-family: Arial"></label>
                <input asp-for="SearchCocktail" class="form-control" />
                <span asp-validation-for="SearchCocktail" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Cocktails" asp-action="SearchCocktails" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    @* 👉 SEE ON UUS OSA *@
    @if (ViewBag.Message != null)
    {
        <div class="form-group col-md-offset-3 col-md-5" style="margin-top:10px">
            <p class="text-danger">@ViewBag.Message</p>
        </div>
    }
</div>
