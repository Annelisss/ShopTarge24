@model ShopTARge24.Core.Domain.RealEstate
@{
    ViewData["Title"] = "Muuda kinnisvara";
}
<h1>Muuda kinnisvara</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="row g-2">
        <div class="col">
            <label class="form-label">Area (m²)</label>
            <input asp-for="Area" class="form-control" />
        </div>
        <div class="col">
            <label class="form-label">Rooms</label>
            <input asp-for="RoomNumber" class="form-control" />
        </div>
        <div class="col">
            <label class="form-label">Building Type</label>
            <input asp-for="BuildingType" class="form-control" />
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Salvesta</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Katkesta</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
